# .env
# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# API Settings
API_PREFIX=/api
API_VERSION=v1
API_DEFAULT_LIMIT=20
API_MAX_LIMIT=100

# Security
BCRYPT_ROUNDS=10
JWT_SECRET=change-this-secret-in-production-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=fn_db
DB_USER=fn_user
DB_PASSWORD=fn_password
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_LOGGING=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=1h
CACHE_KEY_PREFIX=fn:cache:
CACHE_TTL_USER=1h
CACHE_TTL_INCIDENT=30m
CACHE_TTL_SEARCH=5m
CACHE_TTL_SESSION=24h
QUEUE_PREFIX=fn:queue:

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=
ES_INDEX_PREFIX=fn_
ES_NUMBER_OF_SHARDS=1
ES_NUMBER_OF_REPLICAS=0

# Queue Concurrency
QUEUE_NOTIFICATION_CONCURRENCY=5
QUEUE_EMAIL_CONCURRENCY=10
QUEUE_SMS_CONCURRENCY=5
QUEUE_ANALYTICS_CONCURRENCY=2

# Email Service
EMAIL_PROVIDER=smtp
EMAIL_FROM_NAME=FireNotifications
EMAIL_FROM_ADDRESS=noreply@firenotifications.com
# SENDGRID_API_KEY=
# SENDGRID_WEBHOOK_SECRET=
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SMS Service
SMS_PROVIDER=console
SMS_FROM_NUMBER=+1234567890
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_MESSAGING_SERVICE_SID=

# Push Notifications
PUSH_PROVIDER=console
# FCM_PROJECT_ID=
# FCM_PRIVATE_KEY=
# FCM_CLIENT_EMAIL=

# Storage
STORAGE_PROVIDER=local
STORAGE_DEFAULT_BUCKET=fn-uploads
STORAGE_PUBLIC_BUCKET=fn-public
# STORAGE_PUBLIC_URL=
STORAGE_SIGNED_URL_EXPIRY=3600
LOCAL_STORAGE_PATH=./uploads
LOCAL_MAX_FILE_SIZE=10485760

# MinIO (for development)
S3_ENDPOINT=http://localhost:9000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# Upload Settings
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/zip,text/csv
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85
IMAGE_GENERATE_THUMBNAIL=true

# Storage Cleanup
STORAGE_CLEANUP_ENABLED=true
STORAGE_TEMP_EXPIRY=86400000
STORAGE_CLEANUP_SCHEDULE=0 3 * * *

# External APIs (optional)
# GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_ENABLED=false
# WEATHER_API_KEY=
# WEATHER_API_URL=
WEATHER_ENABLED=false

# Webhooks
# WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3