{
  "extends": "../tsconfig.base.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "require": ["tsconfig-paths/register"],
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es2021",
      "lib": ["es2021"],
      "strict": true
    }
  },
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node"],
    "target": "es2021",
    "lib": ["es2021"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "types": ["node", "@ory/permission-namespace-types"]
}
