# .env.example
NODE_ENV=development
PORT=3000
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database
DB_USER=root
DB_PASSWORD=

# Email Service
EMAIL_PROVIDER=console # sendgrid, smtp, console
EMAIL_FROM_NAME=FireNotifications
EMAIL_FROM_ADDRESS=noreply@firenotifications.com
SENDGRID_API_KEY=
SENDGRID_WEBHOOK_SECRET=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SMS Service
SMS_PROVIDER=console # twilio, console
SMS_FROM_NUMBER=+1234567890
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=

# Push Notifications
PUSH_PROVIDER=console # fcm, console
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# Storage
STORAGE_PROVIDER=local # s3, minio, local
STORAGE_DEFAULT_BUCKET=fn-uploads
STORAGE_PUBLIC_BUCKET=fn-public
STORAGE_PUBLIC_URL=
S3_ENDPOINT=http://localhost:9000 # For MinIO
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# Upload Settings
UPLOAD_MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85

# External APIs (optional)
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_ENABLED=false
WEATHER_API_KEY=
WEATHER_API_URL=
WEATHER_ENABLED=false

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3



# Websockets
# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/socket.io

# WebSocket CORS
WEBSOCKET_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
WEBSOCKET_CORS_CREDENTIALS=true
WEBSOCKET_CORS_METHODS=GET,POST

# WebSocket Connection Settings
WEBSOCKET_PING_TIMEOUT=60s
WEBSOCKET_PING_INTERVAL=25s
WEBSOCKET_MAX_BUFFER_SIZE=1000000
WEBSOCKET_ALLOW_EIO3=false

# WebSocket Rate Limiting
WEBSOCKET_RATE_LIMIT_WINDOW=1m
WEBSOCKET_RATE_LIMIT_MAX=100
WEBSOCKET_RATE_LIMIT_SKIP_SUCCESS=false

# WebSocket Authentication
WEBSOCKET_AUTH_REQUIRED=true
WEBSOCKET_AUTH_TIMEOUT=30s
WEBSOCKET_ALLOW_ANONYMOUS=false

# WebSocket Redis Adapter (for scaling across multiple instances)
WEBSOCKET_REDIS_ENABLED=false
WEBSOCKET_REDIS_HOST=localhost
WEBSOCKET_REDIS_PORT=6379
# WEBSOCKET_REDIS_PASSWORD=
WEBSOCKET_REDIS_DB=2
WEBSOCKET_REDIS_PREFIX=socket.io:

# WebSocket Presence Tracking
WEBSOCKET_PRESENCE_ENABLED=true
WEBSOCKET_PRESENCE_HEARTBEAT=30s
WEBSOCKET_PRESENCE_OFFLINE_THRESHOLD=1m
WEBSOCKET_PRESENCE_CLEANUP_INTERVAL=5m

# WebSocket Room Management
WEBSOCKET_ROOM_MAX_SIZE=1000
WEBSOCKET_ROOM_AUTO_CLEANUP=true
WEBSOCKET_ROOM_CLEANUP_INTERVAL=10m

# WebSocket Logging
WEBSOCKET_LOGGING_ENABLED=true
WEBSOCKET_LOG_LEVEL=info
WEBSOCKET_LOG_CONNECTIONS=true
WEBSOCKET_LOG_DISCONNECTIONS=true
WEBSOCKET_LOG_ERRORS=true