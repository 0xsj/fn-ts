# .env.example
NODE_ENV=development
PORT=3000
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database
DB_USER=root
DB_PASSWORD=

# Email Service
EMAIL_PROVIDER=console # sendgrid, smtp, console
EMAIL_FROM_NAME=FireNotifications
EMAIL_FROM_ADDRESS=noreply@firenotifications.com
SENDGRID_API_KEY=
SENDGRID_WEBHOOK_SECRET=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SMS Service
SMS_PROVIDER=console # twilio, console
SMS_FROM_NUMBER=+1234567890
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGING_SERVICE_SID=

# Push Notifications
PUSH_PROVIDER=console # fcm, console
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# Storage
STORAGE_PROVIDER=local # s3, minio, local
STORAGE_DEFAULT_BUCKET=fn-uploads
STORAGE_PUBLIC_BUCKET=fn-public
STORAGE_PUBLIC_URL=
S3_ENDPOINT=http://localhost:9000 # For MinIO
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# Upload Settings
UPLOAD_MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85

# External APIs (optional)
GOOGLE_MAPS_API_KEY=
GOOGLE_MAPS_ENABLED=false
WEATHER_API_KEY=
WEATHER_API_URL=
WEATHER_ENABLED=false

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3